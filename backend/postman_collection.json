{
  "info": {
    "name": "Community AI Forum API",
    "description": "API collection for the Community AI Forum application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.data.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.data.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Posts",
      "item": [
        {
          "name": "Get All Posts",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/posts?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["posts"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Create Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My First Post\",\n  \"content\": \"This is the content of my first post. It contains some interesting information about web development.\",\n  \"tags\": [\"javascript\", \"web-development\", \"tutorial\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/posts",
              "host": ["{{baseUrl}}"],
              "path": ["posts"]
            }
          }
        },
        {
          "name": "Get Single Post",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/posts/:postId",
              "host": ["{{baseUrl}}"],
              "path": ["posts", ":postId"],
              "variable": [
                {
                  "key": "postId",
                  "value": "POST_ID_HERE"
                }
              ]
            }
          }
        },
        {
          "name": "Vote on Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"value\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/posts/:postId/vote",
              "host": ["{{baseUrl}}"],
              "path": ["posts", ":postId", "vote"],
              "variable": [
                {
                  "key": "postId",
                  "value": "POST_ID_HERE"
                }
              ]
            }
          }
        },
        {
          "name": "Get Popular Tags",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/posts/tags/popular?limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["posts", "tags", "popular"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Comments",
      "item": [
        {
          "name": "Get Comments for Post",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/comments/post/:postId",
              "host": ["{{baseUrl}}"],
              "path": ["comments", "post", ":postId"],
              "variable": [
                {
                  "key": "postId",
                  "value": "POST_ID_HERE"
                }
              ]
            }
          }
        },
        {
          "name": "Create Comment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"postId\": \"POST_ID_HERE\",\n  \"content\": \"This is a great post! Thanks for sharing.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/comments",
              "host": ["{{baseUrl}}"],
              "path": ["comments"]
            }
          }
        },
        {
          "name": "Vote on Comment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"value\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/comments/:commentId/vote",
              "host": ["{{baseUrl}}"],
              "path": ["comments", ":commentId", "vote"],
              "variable": [
                {
                  "key": "commentId",
                  "value": "COMMENT_ID_HERE"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Leaderboard",
      "item": [
        {
          "name": "Get Leaderboard",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/leaderboard?limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["leaderboard"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Leaderboard Stats",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/leaderboard/stats",
              "host": ["{{baseUrl}}"],
              "path": ["leaderboard", "stats"]
            }
          }
        }
      ]
    },
    {
      "name": "AI Features",
      "item": [
        {
          "name": "Summarize Post",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"postId\": \"POST_ID_HERE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/ai/summarize",
              "host": ["{{baseUrl}}"],
              "path": ["ai", "summarize"]
            }
          }
        },
        {
          "name": "Generate Draft",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"prompt\": \"How to get started with React hooks\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/ai/draft",
              "host": ["{{baseUrl}}"],
              "path": ["ai", "draft"]
            }
          }
        }
      ]
    }
  ]
}
